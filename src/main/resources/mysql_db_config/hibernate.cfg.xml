<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/realestate</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.default_schema">realestate</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="hibernate.search.autoregister_listeners">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/Status.hbm.xml"/>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/Developers.hbm.xml"/>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/Credentials.hbm.xml"/>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/JobHistory.hbm.xml"/>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/Jobs.hbm.xml"/>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/Source.hbm.xml"/>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/Employees.hbm.xml"/>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/Projects.hbm.xml"/>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/Deals.hbm.xml"/>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/Description.hbm.xml"/>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/Gender.hbm.xml"/>
        <mapping resource="com/RealEstate/www/_MySQL_DB_Entities/Leads.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
